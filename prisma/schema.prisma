generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artisans {
  id String @id @default(uuid())
  storeId String @map("store_id")
  name String @db.VarChar(255)
  email String @db.VarChar(255)
  comissionRate Int @map("comission_rate")
  isActive Boolean @default(true) @map("is_active")
  products Products[]
}

model Products {
  id String @id @default(uuid())
  storeId String @map("store_id")
  artisanId String @map("artisan_id")
  artisan Artisans @relation(fields: [artisanId], references: [id])
  name String @db.VarChar(255)
  price Int
  barcode String
  stockQuantity Int @map("stock_quantity")
}

model Sales {
  id String @id @default(uuid())
  storeId String @map("store_id")
  employeeId String @map("employee_id")
  paymentMethod String @map("payment_method")
  totalGrossAmount Int @map("total_gross_amount")
  totalComission Int @map("total_comission")
  items Json
  saleChunks Json

}
